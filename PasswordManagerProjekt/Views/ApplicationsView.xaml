<UserControl x:Class="PwM_UI.Views.ApplicationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PwM_UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="ApplicationsList" ItemsSource="{Binding Applications}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Application" DisplayMemberBinding="{Binding Name}" Width="266"/>
                    <GridViewColumn Header="Account" DisplayMemberBinding="{Binding Username}" Width="267"/>
                    <GridViewColumn Header="Password" DisplayMemberBinding="{Binding LastUsed}" Width="266"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>