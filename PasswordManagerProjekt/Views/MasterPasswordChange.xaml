<Window x:Class="PwM_UI.Views.MasterPasswordChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PwM_UI.Views"
        xmlns:adorners="http://gu.se/Adorners"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MasterPasswordChange" Height="225" Width="300">
    <Border BorderBrush="#690fc2" BorderThickness="1">
        <Grid Background="#f3f5f2">
            <Grid VerticalAlignment="Top" Height="39" Background="#551cc7">
                <TextBlock Text="Change Master Password"
                       Name="titleTxt"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="#f3f5f2"
                       FontSize="16"
                       Margin="12,8,20,2"
                       Width="201" />

                <Button Content="×"
                    ToolTip="Close"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Foreground="#f3f5f2"
                    Cursor="Hand"
                    Width="28"
                    Height="23"
                    HorizontalAlignment="Left"
                    Margin="236,0,0,0"
                    VerticalAlignment="Center"
                    PreviewMouseDown="closeLBL_PreviewMouseDown" />
            </Grid>

            <PasswordBox Background="#f3f5f2"
                     BorderThickness="0,0,0,1"
                     BorderBrush="#8D0FC3"
                     Foreground="Black"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Name="OldMasterPassword"
                     HorizontalAlignment="Center"
                     Height="30"
                     Margin="0,54,0,0"
                     VerticalAlignment="Top"
                     Width="217"
                     PasswordChanged="OldMasterPassword_PasswordChanged"
                     adorners:Watermark.Text="Old Master Password ">
                <adorners:Watermark.TextStyle>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </adorners:Watermark.TextStyle>
            </PasswordBox>

            <TextBox Background="#f3f5f2"
                 BorderThickness="0,0,0,1"
                 BorderBrush="#8D0FC3"
                 Foreground="Black"
                 FontSize="16"
                 Visibility="Hidden"
                 TextAlignment="Center"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Center"
                 Name="OldMasterPasswordTXT"
                 HorizontalAlignment="Center"
                 Height="30"
                 Margin="0,54,0,0"
                 VerticalAlignment="Top"
                 Width="217"
                 adorners:Watermark.Text="Old Master Password ">
                <adorners:Watermark.TextStyle>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </adorners:Watermark.TextStyle>
            </TextBox>

            <TextBox Background="#f3f5f2"
                 BorderThickness="0,0,0,1"
                 BorderBrush="#8D0FC3"
                 Foreground="Black"
                 FontSize="16"
                 Visibility="Hidden"
                 VerticalContentAlignment="Center"
                 TextAlignment="Center"
                 TextWrapping="Wrap"
                 Name="NewMasterPassTXT"
                 HorizontalAlignment="Center"
                 Height="30"
                 Margin="0,89,0,0"
                 VerticalAlignment="Top"
                 Width="218"
                 adorners:Watermark.Text="Enter New Master Password ">
                <adorners:Watermark.TextStyle>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </adorners:Watermark.TextStyle>
            </TextBox>

            <TextBox Background="#f3f5f2"
                 BorderThickness="0,0,0,1"
                 BorderBrush="#8D0FC3"
                 Foreground="Black"
                 FontSize="16"
                 Visibility="Hidden"
                 VerticalContentAlignment="Center"
                 TextAlignment="Center"
                 TextWrapping="Wrap"
                 Name="ConfirmNewMasterPassTXT"
                 HorizontalAlignment="Center"
                 Height="30"
                 Margin="0,124,0,0"
                 VerticalAlignment="Top"
                 Width="217"
                 adorners:Watermark.Text="Confirm New Master Password ">
                <adorners:Watermark.TextStyle>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </adorners:Watermark.TextStyle>
            </TextBox>

            <Button Content="👁"
                ToolTip="Show Password (Right Click)"
                FontSize="14"
                Background="Transparent"
                BorderBrush="{x:Null}"
                Foreground="Gray"
                Width="18"
                Height="18"
                Margin="246,130,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                PreviewMouseRightButtonDown="ShowVaultPassword"
                PreviewMouseRightButtonUp="ShowVaultPassword"
                PreviewMouseMove="ShowNewVaultPassword_PreviewMouseMove" />

            <PasswordBox Background="#f3f5f2"
                     BorderThickness="0,0,0,1"
                     BorderBrush="#8D0FC3"
                     Foreground="Black"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Name="NewMasterPassword"
                     HorizontalAlignment="Center"
                     Height="30"
                     Margin="0,89,0,0"
                     VerticalAlignment="Top"
                     Width="217"
                     PasswordChanged="addVPassword_PasswordChanged"
                     adorners:Watermark.Text="Enter New Master Password ">
                <adorners:Watermark.TextStyle>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </adorners:Watermark.TextStyle>
            </PasswordBox>

            <PasswordBox Background="#f3f5f2"
                     BorderThickness="0,0,0,1"
                     BorderBrush="#8D0FC3"
                     Foreground="Black"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Name="ConfirmNewMasterPassword"
                     HorizontalAlignment="Center"
                     Height="30"
                     Margin="0,124,0,0"
                     VerticalAlignment="Top"
                     Width="218"
                     PasswordChanged="confirmVPassword_PasswordChanged"
                     adorners:Watermark.Text="Confirm New Master Password ">
                <adorners:Watermark.TextStyle>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </adorners:Watermark.TextStyle>
            </PasswordBox>

            <Button Name="createBTN"
                Style="{DynamicResource RoundCorner2}"
                Content="Change"
                Margin="88,164,88,22"
                IsDefault="True"
                Width="94"
                Height="37"
                Foreground="#FFE1DDEE"
                Click="saveBTN_Click"
                IsEnabled="False"/>

            <Label Content="Vault:"
               HorizontalAlignment="Left"
               Margin="0,196,0,0"
               VerticalAlignment="Top"
               Foreground="#0d0300"
               FontSize="14"
               Height="27"/>

            <TextBlock Name="vaultNameTB"
                   Text="name"
                   HorizontalAlignment="Left"
                   Margin="43,201,0,0"
                   VerticalAlignment="Top"
                   Foreground="#FF1FB21F"
                   FontSize="14"
                   FontWeight="Bold"
                   Height="21"
                   Width="183"/>
        </Grid>
    </Border>
</Window>
